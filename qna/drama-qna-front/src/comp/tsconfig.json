    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "../../comp/types",
    "plugins": [{
      "transform": "typescript-transform-paths",
      "afterDeclarations": true
    }]
  },
  "include": [
    "**/*"
  ]
}
